<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbfbfbf"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zsolt.cseh.snake.WifiActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnWifiSend"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnWifiReceive"
        android:layout_alignStart="@+id/btnWifiReceive" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive"
        android:id="@+id/btnWifiReceive"
        android:layout_below="@+id/btnWifiSend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/btnWifiRefresh"
        android:layout_below="@+id/btnWifiReceive"
        android:layout_toRightOf="@+id/listWifiDevices"
        android:layout_toEndOf="@+id/listWifiDevices" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecUni"
        android:id="@+id/btnWifiUni"
        android:layout_below="@+id/btnWifiRefresh"
        android:layout_toRightOf="@+id/listWifiDevices"
        android:layout_toEndOf="@+id/listWifiDevices" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listWifiDevices"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnWifiSend"
        android:layout_toStartOf="@+id/btnWifiSend" />

</RelativeLayout>
