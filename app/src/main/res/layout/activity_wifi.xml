<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffbfbfbf"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="zsolt.cseh.snake.WifiActivity">

    <ListView
        android:id="@+id/listWifiDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnWifiStartDiscovery"
        android:layout_toRightOf="@+id/btnWifiStartDiscovery"/>

    <Button
        android:id="@+id/btnWifiStartDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Start discovery"/>

    <Button
        android:id="@+id/btnWifiStartServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnWifiStartDiscovery"
        android:layout_toLeftOf="@+id/listWifiDevices"
        android:text="Start server"/>

    <Button
        android:id="@+id/btnWifiConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnWifiStartServer"
        android:layout_toLeftOf="@+id/listWifiDevices"
        android:layout_toStartOf="@+id/listWifiDevices"
        android:text="Connect"/>

</RelativeLayout>
